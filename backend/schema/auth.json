{
    "login": {
        "type": "object",
        "properties": {
            "email": {
                "type": "string",
                "pattern": "^\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b$"
            },
            "password": {
                "type": "string"
            }
        },
        "required": ["email", "password"],
        "additionalProperties": false
    }
}